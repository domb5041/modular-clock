{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "allowJs": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowUmdGlobalAccess": true,
        "useDefineForClassFields": true,
        "jsx": "react",
        "skipLibCheck": true
    },
    "exclude": ["node_modules"]
}
